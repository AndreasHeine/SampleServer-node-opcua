    "@types/node": "24.10.13",
    "@types/semver": "7.7.1",
    "@types/yargs": "17.0.35",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "chai": "6.2.2",
    "chalk": "4.1.2",
    "dependency-cruiser": "17.3.8",
    "eslint": "^9.24.0",
