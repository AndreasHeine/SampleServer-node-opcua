  "dependencies": {
    "bcrypt": "5.1.0",
    "chalk": "4.1.2",
    "node-opcua": "2.91.1",
    "node-opcua-file-transfer": "2.91.1",
    "node-opcua-pki": "3.0.2",
    "node-opcua-pubsub-expander": "^0.19.2",
    "node-opcua-pubsub-server": "^0.19.2",
    "node-opcua-server-discovery": "2.91.1",
    "yargs": "17.7.1"
  },
  "devDependencies": {
