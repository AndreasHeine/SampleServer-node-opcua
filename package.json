    "@types/node": "18.15.1",
    "@types/semver": "7.3.13",
    "@types/yargs": "17.0.22",
    "chai": "4.3.7",
    "chalk": "4.1.2",
    "dependency-cruiser": "12.10.1",
    "mocha": "10.2.0",
    "pkg": "^5.8.0",
    "typescript": "4.9.5"
  }
