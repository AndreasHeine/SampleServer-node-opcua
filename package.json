  "dependencies": {
    "chalk": "4.1.2",
    "node-opcua": "2.140.0",
    "node-opcua-file-transfer": "2.140.0",
    "node-opcua-pki": "4.18.0",
    "node-opcua-pubsub-expander": "^0.19.2",
    "node-opcua-pubsub-server": "^0.19.2",
