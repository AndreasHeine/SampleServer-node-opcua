    "@types/semver": "7.5.8",
    "@types/yargs": "17.0.33",
    "chai": "5.1.2",
    "chalk": "4.1.2",
    "dependency-cruiser": "16.9.0",
    "mocha": "11.0.1",
    "typescript": "5.7.3"
